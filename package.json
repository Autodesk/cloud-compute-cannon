{
  "name": "cloud-compute-cannon",
  "version": "0.1.50-test-01",
  "author": "Dion Amago Whitehead <dion.amago@autodesk.org>",
  "bin": {
    "ccc": "bin/cloudcomputecannon.js",
    "cloudcomputecannon": "bin/cloudcomputecannon.js"
  },
  "scripts": {
    "init": "npm run haxelibs && npm run node_modules && npm run build",
    "haxelibs": "INSTALL=true docker-compose up haxelibs",
    "node_modules": "INSTALL=true docker-compose up node_modules",
    "preview-github-docs": "docker run -it --rm -p 8081:8081 -v ${PWD}:/data -v ~/.grip:/.grip mbentley/grip --context=dionjwa/cloud-compute-cannon README.md 0.0.0.0:8081",
    "build": "docker-compose run compile",
    "clean": "docker-compose rm -fv && rm -rf .haxelib && rm -rf tmp && rm -rf build && rm -rf node_modules",
    "test": "npm run init && npm run test-quick",
    "test-quick": "TEST=true docker-compose run ccc.tests",
    "test-scaling": "TEST_SCALING=true docker-compose run ccc.tests",
    "template.fluent.conf": "sed -e 's/host ::SERVER_HOSTNAME_PRIVATE::/host elasticsearch/' -e 's/::FLUENTD_WORKER_LOG_TAG_PREFIX::/docker.cloudcomputecannon.worker/' -e 's/::FLUENTD_NODEJS_BUNYAN_TAG_PREFIX::/docker.nodejs-bunyan/' etc/log/fluent.conf.template > etc/log/fluent.conf",
    "set-build:server": "rm build.hxml && ln -s etc/hxml/server-build.hxml build.hxml",
    "set-build:client-dashboard": "rm build.hxml && ln -s clients/dashboard/build-dev.hxml build.hxml",
    "set-build:lambda-autoscaling": "rm build.hxml && ln -s src/lambda-autoscaling/build.hxml build.hxml",
    "set-build:test-server-scaling": "rm build.hxml && ln -s test/services/local-scaling-server/build.hxml build.hxml",
    "set-build:test-server": "rm build.hxml && ln -s test/services/stand-alone-tester/build.hxml build.hxml",
    "set-build:all": "rm build.hxml && ln -s etc/hxml/build-all.hxml build.hxml",
    "set-build:all-servers": "rm build.hxml && ln -s etc/hxml/build-all-servers.hxml build.hxml"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Autodesk/cloudcomputecannon.git"
  },
  "bugs": {
    "url": "https://github.com/Autodesk/cloudcomputecannon/issues"
  },
  "dependencies": {
    "aws-sdk": "^2.128.0",
    "base64-stream": "^0.1.3",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "bull": "^3.2.0",
    "bull-arena": "^2.2.0",
    "bunyan": "^1.8.5",
    "bunyan-format": "^0.2.1",
    "busboy": "^0.2.14",
    "chokidar": "^1.6.1",
    "cli-color": "^1.1.0",
    "commander": "^2.9.0",
    "cors": "^2.8.1",
    "dev-null": "^0.1.1",
    "dockerode": "^2.5.1",
    "dotenv": "^4.0.0",
    "elasticsearch": "^13.3.1",
    "eventemitter3": "^2.0.3",
    "express": "^4.16.1",
    "express-bunyan-logger": "^1.3.1",
    "fluent-logger": "^2.4.3",
    "fs-extended": "^0.2.1",
    "http-proxy": "^1.16.2",
    "memwatch-next": "^0.3.0",
    "metaframe": "0.0.2",
    "moment-timezone": "^0.5.11",
    "node-uuid": "^1.4.7",
    "node-vagrant": "^1.2.0",
    "nodemon": "^1.12.1",
    "pkgcloud": "^1.4.0",
    "redis": "^2.8.0",
    "request": "^2.83.0",
    "serve-favicon": "^2.4.5",
    "serve-index": "^1.9.1",
    "shortid": "^2.2.6",
    "source-map-support": "^0.5.0",
    "ssh2": "^0.5.5",
    "streamifier": "^0.1.1",
    "tar-fs": "^1.16.0",
    "tar-stream": "^1.5.2",
    "tar.gz": "^1.0.5",
    "terminal-kit": "^1.13.13",
    "through2": "^2.0.3",
    "ws": "^3.2.0"
  },
  "devDependencies": {
    "express-livereload": "0.0.24",
    "haxe-modular": "^0.6.0",
    "react-hot-loader": "^3.0.0-beta.7",
    "redis-mock": "^0.20.0",
    "webpack": "^3.6.0",
    "webpack-dev-server": "^2.9.1"
  },
  "preferGlobal": true,
  "private": false
}
