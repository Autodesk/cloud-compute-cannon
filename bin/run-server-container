#!/usr/bin/env sh
#First run: docker build -t ccc .
docker run --rm -ti -v `pwd`/src:/app/src -v `pwd`/build:/app/build -v `pwd`/etc:/app/etc -v `pwd`/test:/app/test -v /var/run/docker.sock:/var/run/docker.sock -p 9000:9000 -e HOST_PWD=`pwd` -v `pwd`/data/computejobs:/computejobs -v `pwd`/data/ServiceStorageLocalFileSystem:/app/data/ServiceStorageLocalFileSystem --link cloudcomputecannon_redis_1:redis --link cloudcomputecannon_registry_1:registry ccc