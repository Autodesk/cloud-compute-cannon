#!/usr/bin/env sh

BUILD_DIR="build/client/js"
rm -rf $BUILD_DIR
mkdir -p $BUILD_DIR/bin

haxe etc/hxml/client-js-build.hxml

cp etc/client/js/package.json $BUILD_DIR/
cp README.md $BUILD_DIR/README.md



